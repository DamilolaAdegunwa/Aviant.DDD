<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <Nullable>enable</Nullable>
        <RootNamespace>Aviant.DDD.Infrastructure</RootNamespace>
        <AssemblyName>Aviant.DDD.Infrastructure</AssemblyName>
        <PackageVersion>1.0.0-dev.1</PackageVersion>
        <Authors>Panagiotis Kosmidis</Authors>
        <Description>Aviant Domain Driven Design Library</Description>
        <RepositoryUrl>https://github.com/panosru/Aviant.DDD</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
